
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-responsive">
    <table class="table table-bordered">
        <tr>
            <th>
                Mã SP
            </th>
            <th>
                Image
            </th>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Total
            </th>
            <th>
                Action
            </th>
        </tr>
        @{ double Total = 0;}
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.Product.Id
                </td>
                <td>
                    <img src="@item.Product.Product_image" width="80" />
                </td>
                <td>
                    @item.Product.Title
                </td>
                <td>
                    @item.Product.Product_Price
                </td>
                <td class="text-center">
                    <input type="text" value="@item.Quantity" class="txtQuantity" data-id="@item.Product.Id" class="text-center" style="width:30px" />
                </td>
                <td>
                    @{

                        double value = (double)item.Product.Product_Price * item.Quantity;
                        Total += value;
                    }
                    @value
                </td>
                <td>
                    <a href="#" data-id="@item.Product.Id" class="btn-delete">Xóa</a>
                </td>
            </tr>

                        }

        <tfoot>
            <tr>
                <td colspan="7" class="text-right">
                    <strong>Total:@Total</strong>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
<div class="section group">
    <div class="col-md-6">
        @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
        {
            <div class="form-group">
                <label>Người nhận</label>
                <input name="shipName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Điện thoại</label>
                <input name="Phone" class="form-control" />
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input name="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input name="Email" class="form-control" />
            </div>
            <button type="submit" class="btn">Gửi Thanh Toán</button>
        }
    </div>
</div>
